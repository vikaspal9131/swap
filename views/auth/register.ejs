<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Register</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@100..900&display=swap" rel="stylesheet">
</head>
<body class=" min-h-screen flex flex-col font-[Outfit] font-medium">

  <!-- Main Content -->
  <main class="flex-grow flex items-center justify-center px-4 ">
    <div class="w-full max-w-md bg-white p-8 rounded-2xl shadow-xl border-[1px] border-[#E5E5E5] mt-10">
      <div class="flex justify-between items-center mb-1">
        <h2 class="text-lg font-semibold">Create an account</h2>
        <a href="/login" class="text-sm text-white hover:underline font-[300]">Login</a>
      </div>
      <p class="text-sm text-[#737373] mb-6 font-[300]">Enter your details below to create your account</p>

      <% if (error) { %>
        <div class="bg-red-600 text-white p-2 rounded mb-4 text-sm text-center">
          <%= error %>
        </div>
      <% } %>

      <form action="/register" method="POST" onsubmit="return syncSkills()" class="space-y-4">
        <input type="text" name="name" placeholder="Username" autocomplete="off"
          class="placeholder-[#737373] font-[200] w-full mt-1 px-4 py-2 rounded text-black border border-[#E5E5E5] outline-none " required>

        <input type="email" name="email" placeholder="example12@gmail.com" autocomplete="off"
          class="placeholder-[#737373] font-[200] w-full mt-1 px-4 py-2 rounded text-black border border-[#E5E5E5] outline-none " required>

        <input type="password" name="password" placeholder="••••••••"
          class="placeholder-[#737373] font-[200] w-full mt-1 px-4 py-2 rounded text-black border border-[#E5E5E5] outline-none " required>

        <!-- Skills Offered -->
        <div>
          <label class="text-sm block mb-1 font-[400]">Skills you offer</label>
          <div class="max-h-[60px] overflow-x-auto overflow-y-auto whitespace-nowrap flex flex-wrap gap-2 mb-1" id="skillsOfferedContainer"></div>
          <input type="text" id="skillsOfferedInput" placeholder="Type and press Enter"
            class="placeholder-[#737373] font-[200] w-full mt-1 px-4 py-2 rounded text-black border border-[#E5E5E5] outline-none " />
          <input type="hidden" name="skillsOffered" id="skillsOfferedHidden">
        </div>

        <!-- Skills Wanted -->
        <div>
          <label class="text-sm block mb-1 font-[400]">Skills you want</label>
          <div class="max-h-[60px] overflow-x-auto overflow-y-auto whitespace-nowrap flex flex-wrap gap-2 mb-2  " id="skillsWantedContainer"></div>
          <input type="text" id="skillsWantedInput" placeholder="Type and press Enter"
            class="placeholder-[#737373] font-[200] w-full mt-1 px-4 py-2 rounded text-black border border-[#E5E5E5] outline-none  " />
          <input autocomplete="off" type="hidden" name="skillsWanted" id="skillsWantedHidden">
        </div>

        <button type="submit"
          class="w-full bg-gray-100 text-black  py-2 rounded hover:bg-white transition">
          Register
        </button>
      </form>
    </div>
  </main>

  <!-- JS -->
<script src="/register.js"></script>
</script>
</body>
</html>
