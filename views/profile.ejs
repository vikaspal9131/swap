<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= user?.name || "Profile" %> | Skill Swap</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 text-black min-h-screen flex flex-col transition-colors duration-300">

  <!-- Navbar -->
  <nav class="main-nav p-4 sticky top-0 z-50 backdrop-blur-sm bg-white bg-opacity-90 shadow">
    <div class="flex justify-between items-center max-w-6xl mx-auto">
      <a href="/" class="text-2xl font-bold text-black">Skill Swap</a>

      <div class="flex items-center space-x-4">
        <a href="/" class="text-sm font-medium text-blue-600">Home</a>
        <% if (user) { %>
          <a href="/profile" class="text-sm font-medium hover:text-blue-600">Profile</a>
          <form action="/logout" method="POST">
            <button type="submit" class="text-sm font-medium text-red-600 hover:underline">Logout</button>
          </form>
        <% } else { %>
          <a href="/login" class="text-sm font-medium hover:text-blue-600">Login</a>
        <% } %>
      </div>
    </div>
  </nav>

  <!-- Profile Section -->
  <main class="flex flex-col md:flex-row items-start gap-8 max-w-6xl mx-auto p-8 w-full">
    <!-- Left Side -->
    <aside class="w-full md:w-1/4 flex flex-col items-center md:items-start text-center md:text-left">
      <div class="w-40 h-40 rounded-full overflow-hidden border-4 border-gray-300 shadow-lg mb-4">
        <img src="<%= user?.profilePhoto || 'https://i.pravatar.cc/200' %>" alt="Profile Photo" class="w-full h-full object-cover">
      </div>
      <div>
        <h1 class="text-3xl font-bold"><%= user?.name || "Username" %></h1>
        <p class="text-gray-600"><%= user?.email || "user@example.com" %></p>
      </div>
    </aside>

    <!-- Right Side -->
    <section class="flex-1 space-y-8 w-full">
      <!-- Skills Offered -->
      <div>
        <h2 class="text-2xl font-semibold border-b border-gray-300 pb-2 mb-2">Skills Offered</h2>
        <ul class="list-disc pl-5 text-gray-700">
          <% if (user?.skillsOffered?.length) { %>
            <% user.skillsOffered.forEach(skill => { %>
              <li><%= skill %></li>
            <% }) %>
          <% } else { %>
            <li>No skills listed.</li>
          <% } %>
        </ul>
      </div>

      <!-- Skills Wanted -->
      <div>
        <h2 class="text-2xl font-semibold border-b border-gray-300 pb-2 mb-2">Skills Wanted</h2>
        <ul class="list-disc pl-5 text-gray-700">
          <% if (user?.skillsWanted?.length) { %>
            <% user.skillsWanted.forEach(skill => { %>
              <li><%= skill %></li>
            <% }) %>
          <% } else { %>
            <li>No skills wanted.</li>
          <% } %>
        </ul>
      </div>

      <!-- Incoming Requests -->
      <div>
        <h2 class="text-2xl font-semibold border-b border-gray-300 pb-2 mb-2">ðŸ“¥ Incoming Swap Requests</h2>
        <% if (incomingRequests.length > 0) { %>
          <ul class="space-y-4">
            <% incomingRequests.forEach(req => { %>
              <li class="bg-white p-4 rounded-lg shadow border border-gray-300">
                <p><strong class="text-blue-600"><%= req.fromUser.name %></strong> wants to learn <span class="text-yellow-600"><%= req.wantedSkill %></span> and is offering <span class="text-green-600"><%= req.offeredSkill %></span></p>
                <p class="text-gray-600 italic mt-1">" <%= req.message %> "</p>
              </li>
            <% }) %>
          </ul>
        <% } else { %>
          <p class="text-gray-500 italic">No incoming requests yet.</p>
        <% } %>
      </div>

      <!-- Outgoing Requests -->
      <div>
        <h2 class="text-2xl font-semibold border-b border-gray-300 pb-2 mb-2">ðŸ“¤ Outgoing Swap Requests</h2>
        <% if (outgoingRequests.length > 0) { %>
          <ul class="space-y-4">
            <% outgoingRequests.forEach(req => { %>
              <li class="bg-white p-4 rounded-lg shadow border border-gray-300">
                <p>You sent a request to <strong class="text-blue-600"><%= req.toUser.name %></strong> offering <span class="text-green-600"><%= req.offeredSkill %></span> and requesting <span class="text-yellow-600"><%= req.wantedSkill %></span></p>
                <p class="text-gray-600 italic mt-1">" <%= req.message %> "</p>
              </li>
            <% }) %>
          </ul>
        <% } else { %>
          <p class="text-gray-500 italic">You haven't sent any requests yet.</p>
        <% } %>
      </div>

    </section>
  </main>
</body>
</html>
