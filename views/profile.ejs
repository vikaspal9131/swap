<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Profile</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@100..900&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet">
  <style>
    .edit-mode-hidden {
      display: none;
    }
  </style>
</head>
<body class="bg-white text-black min-h-screen flex flex-col font-[Outfit]">

<nav class="main-nav flex items-center justify-center p-4 sticky top-0 z-50 backdrop-blur-lg bg-opacity-70">
  <div class="flex justify-between items-center w-full max-w-7xl mx-auto px-4">
    <a href="/" class="text-2xl text-black">
      <i class="ri-blaze-line"></i> Swap
    </a>

    <div class="flex items-center space-x-6">
      <a href="/" class="text-[14px] font-[400]">Home</a>
      <a href="/" class="text-[14px]">Request</a>
      <a href="/" class="text-[14px]">Dashboard</a>

      <% if (user) { %>
        <a href="/profile" class="w-[30px] rounded-full">
          <img src="<%= user?.profilePhoto || 'https://images.unsplash.com/photo-1534528741775-53994a69daeb?q=80&w=1964&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D' %>" alt="Profile Photo" class="rounded-[10px]">
        </a>
      <% } else { %>
        <a href="/login" class="text-[14px] hover:text-blue-500 transition-colors duration-300">Login</a>
      <% } %>
    </div>
  </div>
</nav>

<div class="flex flex-col flex-1 items-center px-4 py-8">
  <div class="w-full max-w-4xl bg-white rounded-lg p-8 shadow-md border border-gray-200">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-3xl font-semibold text-gray-800">Your Profile</h1>
      <button id="editProfileBtn" class="px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 transition-colors duration-200">
        Edit Profile
      </button>
    </div>
    <p class="text-gray-600 mb-8">Manage your profile information and view your activity.</p>

    <div class="flex flex-col md:flex-row gap-8">
      <aside class="w-full md:w-1/3 bg-gray-100 rounded-lg p-6 flex flex-col items-center shadow-sm border border-gray-200">
        <div class="w-32 h-32 rounded-full overflow-hidden border-4 border-gray-300 shadow-lg mb-4">
          <img id="profilePhotoDisplay" src="<%= user?.profilePhoto || 'https://images.unsplash.com/photo-1534528741775-53994a69daeb?q=80&w=1964&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D' %>" alt="Profile Photo" class="w-full h-full object-cover">
        </div>
        <div class="text-center">
          <h2 id="userNameDisplay" class="text-xl font-bold text-gray-800"><%= user?.name || "Guest User" %></h2>
          
        </div>
      </aside>

      <section class="flex-1 space-y-6 w-full">
        <div id="displayMode">
          <div class="bg-gray-100 rounded-lg p-6 shadow-sm border border-gray-200">
            <h2 class="text-xl font-semibold border-b border-gray-300 pb-2 mb-4 text-gray-800">Skills You Offer</h2>
            <ul class="list-disc pl-5 text-gray-700">
              <% if (user?.skillsOffered?.length) { %>
                <% user.skillsOffered.forEach(skill => { %>
                  <li><%= skill %></li>
                <% }) %>
              <% } else { %>
                <li>No skills offered yet.</li>
              <% } %>
            </ul>
          </div>

          <div class="bg-gray-100 rounded-lg p-6 shadow-sm border border-gray-200">
            <h2 class="text-xl font-semibold border-b border-gray-300 pb-2 mb-4 text-gray-800">Skills You Want to Learn</h2>
            <ul class="list-disc pl-5 text-gray-700">
              <% if (user?.skillsWanted?.length) { %>
                <% user.skillsWanted.forEach(skill => { %>
                  <li><%= skill %></li>
                <% }) %>
              <% } else { %>
                <li>No skills wanted yet.</li>
              <% } %>
            </ul>
          </div>
        </div>

        <form id="editModeForm" action="/profile/update" method="POST" class="edit-mode-hidden">
          <div class="bg-gray-100 rounded-lg p-6 shadow-sm border border-gray-200 mb-6">
            <h2 class="text-xl font-semibold border-b border-gray-300 pb-2 mb-4 text-gray-800">Edit Personal Information</h2>
            <div class="mb-4">
              <label for="userName" class="block text-gray-700 text-sm font-bold mb-2">Name:</label>
              <input type="text" id="userName" name="name" value="<%= user?.name || '' %>" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" required>
            </div>
            <div class="mb-4">
              <label for="profilePhotoUrl" class="block text-gray-700 text-sm font-bold mb-2">Profile Photo URL:</label>
              <input type="url" id="profilePhotoUrl" name="profilePhoto" value="<%= user?.profilePhoto || '' %>" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Enter image URL">
            </div>
          </div>

          <div class="bg-gray-100 rounded-lg p-6 shadow-sm border border-gray-200 mb-6">
            <h2 class="text-xl font-semibold border-b border-gray-300 pb-2 mb-4 text-gray-800">Edit Skills Offered</h2>
            <textarea name="skillsOffered" id="skillsOffered" rows="4" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"><%= user?.skillsOffered?.join(', ') || '' %></textarea>
            <p class="text-gray-500 text-xs mt-2">Enter skills separated by commas.</p>
          </div>

          <div class="bg-gray-100 rounded-lg p-6 shadow-sm border border-gray-200 mb-6">
            <h2 class="text-xl font-semibold border-b border-gray-300 pb-2 mb-4 text-gray-800">Edit Skills Wanted</h2>
            <textarea name="skillsWanted" id="skillsWanted" rows="4" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"><%= user?.skillsWanted?.join(', ') || '' %></textarea>
            <p class="text-gray-500 text-xs mt-2">Enter skills separated by commas.</p>
          </div>

          <div class="flex justify-end gap-4 mt-6">
            <button type="button" id="cancelEditBtn" class="px-6 py-2 border border-gray-300 text-gray-700 rounded-md hover:bg-gray-100 transition-colors duration-200">Cancel</button>
            <button type="submit" class="px-6 py-2 bg-green-500 text-white rounded-md hover:bg-green-600 transition-colors duration-200">Save Changes</button>
          </div>
        </form>

        <div class="bg-gray-100 rounded-lg p-6 shadow-sm border border-gray-200">
          <h2 class="text-xl font-semibold border-b border-gray-300 pb-2 mb-4 text-gray-800">ðŸ“¥ Incoming Swap Requests</h2>
          <% if (incomingRequests.length > 0) { %>
            <ul class="space-y-4">
              <% incomingRequests.forEach(req => { %>
                <li class="bg-white p-4 rounded-lg shadow border border-gray-300">
                  <p><strong class="text-green-600"><%= req.fromUser.name %></strong> wants to learn <span class="text-yellow-600"><%= req.wantedSkill %></span> and is offering <span class="text-blue-600"><%= req.offeredSkill %></span></p>
                  <p class="text-gray-600 italic mt-1">" <%= req.message %> "</p>
                </li>
              <% }) %>
            </ul>
          <% } else { %>
            <p class="text-gray-600 italic">No incoming requests yet.</p>
          <% } %>
        </div>

        <div class="bg-gray-100 rounded-lg p-6 shadow-sm border border-gray-200">
          <h2 class="text-xl font-semibold border-b border-gray-300 pb-2 mb-4 text-gray-800">ðŸ“¤ Outgoing Swap Requests</h2>
          <% if (outgoingRequests.length > 0) { %>
            <ul class="space-y-4">
              <% outgoingRequests.forEach(req => { %>
                <li class="bg-white p-4 rounded-lg shadow border border-gray-300">
                  <p>You sent a request to <strong class="text-green-600"><%= req.toUser.name %></strong> offering <span class="text-blue-600"><%= req.offeredSkill %></span> and requesting <span class="text-yellow-600"><%= req.wantedSkill %></span></p>
                  <p class="text-gray-600 italic mt-1">" <%= req.message %> "</p>
                </li>
              <% }) %>
            </ul>
          <% } else { %>
            <p class="text-gray-600 italic">You haven't sent any requests yet.</p>
          <% } %>
        </div>
      </section>
    </div>
  </div>
</div>

<script>
  const editProfileBtn = document.getElementById('editProfileBtn');
  const displayMode = document.getElementById('displayMode');
  const editModeForm = document.getElementById('editModeForm');
  const cancelEditBtn = document.getElementById('cancelEditBtn');

  const userNameDisplay = document.getElementById('userNameDisplay');
  const profilePhotoDisplay = document.getElementById('profilePhotoDisplay');
  const navProfilePhoto = document.querySelector('nav a[href="/profile"] img');

  editProfileBtn.addEventListener('click', () => {
    displayMode.classList.add('edit-mode-hidden');
    editModeForm.classList.remove('edit-mode-hidden');
    editProfileBtn.classList.add('edit-mode-hidden');
  });

  cancelEditBtn.addEventListener('click', () => {
    editModeForm.classList.add('edit-mode-hidden');
    displayMode.classList.remove('edit-mode-hidden');
    editProfileBtn.classList.remove('edit-mode-hidden');
  });

  const userNameInput = document.getElementById('userName');
  const profilePhotoUrlInput = document.getElementById('profilePhotoUrl');

  userNameInput.addEventListener('input', () => {
    userNameDisplay.textContent = userNameInput.value || "Guest User";
  });

  profilePhotoUrlInput.addEventListener('input', () => {
    const newUrl = profilePhotoUrlInput.value;
    if (newUrl && (newUrl.startsWith('http://') || newUrl.startsWith('https://'))) {
      profilePhotoDisplay.src = newUrl;
      navProfilePhoto.src = newUrl;
    } else {
      const fallback = 'https://images.unsplash.com/photo-1534528741775-53994a69daeb?q=80&w=1964&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D';
      profilePhotoDisplay.src = fallback;
      navProfilePhoto.src = fallback;
    }
  });

  if (navProfilePhoto) {
    navProfilePhoto.src = '<%= user?.profilePhoto || "https://images.unsplash.com/photo-1534528741775-53994a69daeb?q=80&w=1964&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" %>';
  }
</script>
</body>
</html>
